{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/app/*"]
        }
    },
    "include": [
        "./src/**/**/*"
    ]
}